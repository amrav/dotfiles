[general]
metadata = ~/.var/offlineimap
accounts = jonnylamb, durham, collabora
#accounts = collabora, durham, jonnylamb
pythonfile = ~/.offlineimap/helper.py
ui = Noninteractive.Basic, Noninteractive.Quiet
maxsyncaccounts = 3
maxconnections = 3

[mbnames]
enabled = yes
filename = ~/.var/offlineimap/mailboxes
header = '# generated by offlineimap\n'
peritem = mailboxes =%(foldername)s
sep = "\n"
footer = "\n"

[Account jonnylamb]
localrepository = local-jonnylamb
remoterepository = remote-jonnylamb

[Repository local-jonnylamb]
type = Maildir
localfolders = ~/mail
sep = /

[Repository remote-jonnylamb]
type = IMAP
remotehost = jonnylamb.com
remoteuser = jonnylamb@jonnylamb.com
remotepassfile = ~/.offlineimap/jonnylamb_password
ssl = yes
folderfilter = jonnylamb_folderfilter
nametrans = jonnylamb_nametrans

[Account durham]
localrepository = local-durham
remoterepository = remote-durham

[Repository local-durham]
type = Maildir
localfolders = ~/mail

[Repository remote-durham]
type = IMAP
remotehost = compsoc.dur.ac.uk
remoteuser = jdl
remotepassfile = ~/.offlineimap/durham_password
ssl = yes
folderfilter = lambda fn: fn not in ['Spam', 'Drafts', 'Trash', 'Queue', 'Lists']
nametrans = durham_nametrans

[Account collabora]
