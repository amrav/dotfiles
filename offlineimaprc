[general]
metadata = ~/.var/offlineimap
accounts = jonnylamb, collabora
#accounts = collabora, jonnylamb
pythonfile = ~/.offlineimap/helper.py
ui = Noninteractive.Basic, Noninteractive.Quiet
maxsyncaccounts = 3
maxconnections = 3

[mbnames]
enabled = yes
filename = ~/.var/offlineimap/mailboxes.new
header = '# generated by offlineimap\n'
peritem = mailboxes =%(foldername)s
sep = "\n"
footer = "\n"

[Account jonnylamb]
localrepository = local
remoterepository = remote-jonnylamb

[Repository local]
type = Maildir
localfolders = ~/mail
sep = /

[Repository remote-jonnylamb]
type = IMAP
remotehost = jonnylamb.com
remoteuser = jonnylamb@jonnylamb.com
remotepassfile = ~/.offlineimap/jonnylamb_password
ssl = yes
folderfilter = jonnylamb_folderfilter
nametrans = jonnylamb_nametrans

